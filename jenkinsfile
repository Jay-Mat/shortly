pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }
    environment {
        CI = false //do not treat errors as warnings
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'
                sh 'npm run build'
               
            }
        }
    }

    stages {
        stage('Containerization') {
            steps {
                sh 'docker login -u jaymath237 -p Jstorm237'
                sh 'docker build -t emmy-ride:v1 ${1} .'
                sh 'docker tag emmy-ride:v1 jaymath237:v1'
                sh 'docker push emmy-ride:v1'
            }
        }
    }

}